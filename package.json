{
  "name": "next-js-boilerplate",
  "version": "1.0.2",
  "scripts": {
    "dev": "next",
    "build": "next build",
    "start": "next start",
    "build-stats": "ANALYZE=true npm run build",
    "export": "next export -o dist",
    "build-prod": "run-s clean build export",
    "clean": "rimraf .next dist",
    "lint": "eslint --ext .js,.jsx,.ts,.tsx ."
  },
  "dependencies": {
    "date-fns": "^2.21.3",
    "gray-matter": "^4.0.3",
    "highlight.js": "^11.2.0",
    "marked": "^3.0.4",
    "next": "^11.1.2",
    "next-seo": "^4.24.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "sanitize-html": "^2.5.1",
    "styled-jsx-plugin-postcss": "^4.0.1"
  },
  "devDependencies": {
    "@next/bundle-analyzer": "^10.2.0",
    "@types/marked": "^3.0.1",
    "@types/node": "^15.0.2",
    "@types/react": "^17.0.5",
    "@types/sanitize-html": "^2.3.2",
    "@typescript-eslint/eslint-plugin": "^4.23.0",
    "autoprefixer": "^10.2.5",
    "eslint": "^7.26.0",
    "eslint-config-airbnb-typescript": "^12.3.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.23.2",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^4.3.8",
    "lint-staged": "^11.0.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.2.15",
    "prettier": "^2.3.0",
    "rimraf": "^3.0.2",
    "tailwindcss": "^2.2.15",
    "typescript": "^4.3.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint --fix",
      "eslint"
    ],
    "*.json": [
      "prettier --write"
    ]
  },
  "license": "ISC"
}
